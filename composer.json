{
    "name": "master-ghd/symfony7-skeleton-webpack",
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "php": "^8.4",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "doctrine/dbal": "^3.10.4",
        "doctrine/doctrine-bundle": "^2.18.1",
        "doctrine/doctrine-fixtures-bundle": "^4.3.1",
        "doctrine/doctrine-migrations-bundle": "^3.7",
        "doctrine/orm": "^3.5.8",
        "phpdocumentor/reflection-docblock": "^5.6.5",
        "phpstan/phpdoc-parser": "^2.3",
        "phpstan/phpstan-symfony": "^2.0.9",
        "symfony/console": "7.4.*",
        "symfony/dotenv": "7.4.*",
        "symfony/flex": "^2.10",
        "symfony/framework-bundle": "7.4.*",
        "symfony/http-client": "7.4.*",
        "symfony/messenger": "7.4.*",
        "symfony/property-access": "7.4.*",
        "symfony/property-info": "7.4.*",
        "symfony/requirements-checker": "^2.0.3",
        "symfony/runtime": "7.4.*",
        "symfony/security-bundle": "7.4.*",
        "symfony/serializer": "7.4.*",
        "symfony/twig-bundle": "7.4.*",
        "symfony/ux-icons": "^2.31",
        "symfony/validator": "7.4.*",
        "symfony/webpack-encore-bundle": "^2.4",
        "symfony/yaml": "7.4.*"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "bump-after-update": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*",
        "symfony/polyfill-php83": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd",
            "requirements-checker": "script"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "post-create-project-cmd": [
            "@set-app-secret"
        ],
        "cs-fixer": [
            "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --diff"
        ],
        "cs-fixer-dry": [
            "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --verbose --diff --dry-run"
        ],
        "phpstan": [
            "vendor/bin/phpstan analyse --memory-limit=512M --configuration=phpstan.neon"
        ],
        "rector": [
            "vendor/bin/rector process --config=rector.php"
        ],
        "rector-dry": [
            "vendor/bin/rector process --config=rector.php --dry-run"
        ],
        "phpunit": [
            "vendor/bin/phpunit --testdox --colors=always"
        ],
        "phpunit-coverage": [
            "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html var/coverage --testdox --colors=always"
        ],
        "qa": [
            "@cs-fixer-dry",
            "@phpstan",
            "@rector-dry",
            "@phpunit"
        ],
        "qa-fix": [
            "@cs-fixer",
            "@rector",
            "@phpunit"
        ],
        "set-app-secret": [
            "@php bin/console secrets:set APP_SECRET --random=32"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": true,
            "require": "7.4.*",
            "docker": true
        }
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "friendsofphp/php-cs-fixer": "^3.92.0",
        "phpunit/phpunit": "^12.5.3",
        "rector/rector": "^2.2.14",
        "symfony/browser-kit": "7.4.*",
        "symfony/css-selector": "7.4.*",
        "symfony/debug-bundle": "7.4.*",
        "symfony/maker-bundle": "^1.65.1",
        "symfony/monolog-bundle": "^3.11.1",
        "symfony/stopwatch": "7.4.*",
        "symfony/web-profiler-bundle": "7.4.*"
    }
}
