{% extends 'base.html.twig' %}

{% block title %}MDB Bootstrap 5 Components Examples{% endblock %}

{% block body %}
<div class="container my-5">
    <h1 class="mb-5 text-center">MDB Bootstrap 5 Components with Vite</h1>

    <!-- Alerts -->
    <section class="mb-5">
        <h2 class="mb-3">Alerts {{ ux_icon('heroicons:bell') }}</h2>
        <div class="alert alert-primary" role="alert">
            A simple primary alertâ€”check it out!
        </div>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ ux_icon('heroicons:check-circle') }} A dismissible success alert
            <button type="button" class="btn-close" data-mdb-dismiss="alert" aria-label="Close"></button>
        </div>
        <div class="alert alert-warning" role="alert">
            {{ ux_icon('heroicons:exclamation-triangle') }} Warning alert with icon
        </div>
    </section>

    <!-- Buttons -->
    <section class="mb-5">
        <h2 class="mb-3">Buttons {{ ux_icon('heroicons:cursor-arrow-rays') }}</h2>
        <button type="button" class="btn btn-primary">Primary</button>
        <button type="button" class="btn btn-secondary">Secondary</button>
        <button type="button" class="btn btn-success">Success</button>
        <button type="button" class="btn btn-danger">Danger</button>
        <button type="button" class="btn btn-warning">Warning</button>
        <button type="button" class="btn btn-info">Info</button>
        <button type="button" class="btn btn-light">Light</button>
        <button type="button" class="btn btn-dark">Dark</button>
        <br><br>
        <button type="button" class="btn btn-outline-primary">
            {{ ux_icon('heroicons:heart') }} Outline with Icon
        </button>
        <button type="button" class="btn btn-rounded btn-primary">Rounded</button>
        <button type="button" class="btn btn-floating btn-lg btn-primary">
            {{ ux_icon('heroicons:plus') }}
        </button>
    </section>

    <!-- Cards -->
    <section class="mb-5">
        <h2 class="mb-3">Cards {{ ux_icon('heroicons:rectangle-stack') }}</h2>
        <div class="row">
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Card title {{ ux_icon('heroicons:star') }}</h5>
                        <p class="card-text">Some quick example text to build on the card title.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-header">Featured</div>
                    <div class="card-body">
                        <h5 class="card-title">Special card</h5>
                        <p class="card-text">With supporting text below.</p>
                        <a href="#" class="btn btn-primary">Go somewhere</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="card-title">Centered card</h5>
                        <p class="card-text">Centered content in card.</p>
                        <a href="#" class="btn btn-primary">Button</a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Forms -->
    <section class="mb-5">
        <h2 class="mb-3">Forms {{ ux_icon('heroicons:document-text') }}</h2>
        <form>
            <div class="form-outline mb-4">
                <input type="email" id="form1Example1" class="form-control" />
                <label class="form-label" for="form1Example1">
                    {{ ux_icon('heroicons:envelope') }} Email address
                </label>
            </div>
            <div class="form-outline mb-4">
                <input type="password" id="form1Example2" class="form-control" />
                <label class="form-label" for="form1Example2">
                    {{ ux_icon('heroicons:lock-closed') }} Password
                </label>
            </div>
            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="" id="form1Example3" checked />
                        <label class="form-check-label" for="form1Example3"> Remember me </label>
                    </div>
                </div>
                <div class="col">
                    <a href="#!">Forgot password?</a>
                </div>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Sign in</button>
        </form>
    </section>

    <!-- Modal -->
    <section class="mb-5">
        <h2 class="mb-3">Modal {{ ux_icon('heroicons:window') }}</h2>
        <button type="button" class="btn btn-primary" data-mdb-toggle="modal" data-mdb-target="#exampleModal">
            {{ ux_icon('heroicons:arrow-up-on-square') }} Launch demo modal
        </button>
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="btn-close" data-mdb-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        {{ ux_icon('heroicons:information-circle') }} This is a modal dialog example with MDB Bootstrap 5.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-mdb-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Tables -->
    <section class="mb-5">
        <h2 class="mb-3">Tables {{ ux_icon('heroicons:table-cells') }}</h2>
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">{{ ux_icon('heroicons:hashtag') }}</th>
                        <th scope="col">First</th>
                        <th scope="col">Last</th>
                        <th scope="col">Handle</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row">1</th>
                        <td>Mark</td>
                        <td>Otto</td>
                        <td>@mdo</td>
                    </tr>
                    <tr>
                        <th scope="row">2</th>
                        <td>Jacob</td>
                        <td>Thornton</td>
                        <td>@fat</td>
                    </tr>
                    <tr>
                        <th scope="row">3</th>
                        <td>Larry</td>
                        <td>Bird</td>
                        <td>@twitter</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </section>

    <!-- Badges -->
    <section class="mb-5">
        <h2 class="mb-3">Badges {{ ux_icon('heroicons:tag') }}</h2>
        <span class="badge badge-primary">Primary</span>
        <span class="badge badge-secondary">Secondary</span>
        <span class="badge badge-success">{{ ux_icon('heroicons:check') }} Success</span>
        <span class="badge badge-danger">{{ ux_icon('heroicons:x-mark') }} Danger</span>
        <span class="badge badge-warning">Warning</span>
        <span class="badge badge-info">Info</span>
        <span class="badge rounded-pill badge-primary">Pill badge</span>
    </section>

    <!-- Progress Bars -->
    <section class="mb-5">
        <h2 class="mb-3">Progress Bars {{ ux_icon('heroicons:chart-bar') }}</h2>
        <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar" role="progressbar" style="width: 25%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">25%</div>
        </div>
        <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-success" role="progressbar" style="width: 50%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100">50%</div>
        </div>
        <div class="progress mb-3" style="height: 20px;">
            <div class="progress-bar bg-info" role="progressbar" style="width: 75%;" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100">75%</div>
        </div>
        <div class="progress" style="height: 20px;">
            <div class="progress-bar bg-warning progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%;" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">100%</div>
        </div>
    </section>

    <!-- Spinners -->
    <section class="mb-5">
        <h2 class="mb-3">Spinners {{ ux_icon('heroicons:arrow-path') }}</h2>
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="spinner-border text-success" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="spinner-border text-danger" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="spinner-grow text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="spinner-grow text-success" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <div class="spinner-grow text-danger" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </section>

    <!-- Accordion -->
    <section class="mb-5">
        <h2 class="mb-3">Accordion {{ ux_icon('heroicons:bars-3-bottom-left') }}</h2>
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-mdb-toggle="collapse" data-mdb-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        {{ ux_icon('heroicons:chevron-down') }} Accordion Item #1
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-mdb-parent="#accordionExample">
                    <div class="accordion-body">
                        This is the first item's accordion body.
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-mdb-toggle="collapse" data-mdb-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        {{ ux_icon('heroicons:chevron-down') }} Accordion Item #2
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-mdb-parent="#accordionExample">
                    <div class="accordion-body">
                        This is the second item's accordion body.
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Breadcrumb -->
    <section class="mb-5">
        <h2 class="mb-3">Breadcrumb {{ ux_icon('heroicons:map') }}</h2>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">{{ ux_icon('heroicons:home') }} <a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Library</a></li>
                <li class="breadcrumb-item active" aria-current="page">Data</li>
            </ol>
        </nav>
    </section>

    <!-- Tooltips & Popovers -->
    <section class="mb-5">
        <h2 class="mb-3">Tooltips & Popovers {{ ux_icon('heroicons:chat-bubble-bottom-center-text') }}</h2>
        <button type="button" class="btn btn-secondary" data-mdb-toggle="tooltip" data-mdb-placement="top" title="Tooltip on top">
            Tooltip on top
        </button>
        <button type="button" class="btn btn-secondary" data-mdb-toggle="popover" title="Popover title" data-mdb-content="And here's some amazing content. It's very engaging. Right?">
            Click to toggle popover
        </button>
    </section>

    <!-- List Group -->
    <section class="mb-5">
        <h2 class="mb-3">List Group {{ ux_icon('heroicons:list-bullet') }}</h2>
        <ul class="list-group" style="max-width: 500px;">
            <li class="list-group-item active">{{ ux_icon('heroicons:check-circle') }} Active item</li>
            <li class="list-group-item">{{ ux_icon('heroicons:document') }} A second item</li>
            <li class="list-group-item">{{ ux_icon('heroicons:document') }} A third item</li>
            <li class="list-group-item">{{ ux_icon('heroicons:document') }} A fourth item</li>
            <li class="list-group-item disabled">{{ ux_icon('heroicons:no-symbol') }} Disabled item</li>
        </ul>
    </section>

    <!-- Pagination -->
    <section class="mb-5">
        <h2 class="mb-3">Pagination {{ ux_icon('heroicons:arrows-right-left') }}</h2>
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" href="#">{{ ux_icon('heroicons:chevron-left') }}</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item active"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">{{ ux_icon('heroicons:chevron-right') }}</a></li>
            </ul>
        </nav>
    </section>

    <!-- Toast -->
    <section class="mb-5">
        <h2 class="mb-3">Toast {{ ux_icon('heroicons:megaphone') }}</h2>
        <button type="button" class="btn btn-primary" id="showToast">Show Toast</button>
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div id="liveToast" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    {{ ux_icon('heroicons:bell') }}
                    <strong class="me-auto">Bootstrap</strong>
                    <small>11 mins ago</small>
                    <button type="button" class="btn-close" data-mdb-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    Hello, world! This is a toast message.
                </div>
            </div>
        </div>
    </section>

</div>
{% endblock %}
